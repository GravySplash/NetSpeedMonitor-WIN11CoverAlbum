<Window x:Class="NetSpeedMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="220" Height="30"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
  <Border CornerRadius="8" Padding="10,4" Background="#E61E1E1E">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
      <TextBlock x:Name="TxtUp"   FontFamily="Consolas" FontSize="13" Foreground="#FF57D957" Text="↑ 0 KB/s" Margin="0,0,12,0"/>
      <TextBlock x:Name="TxtDown" FontFamily="Consolas" FontSize="13" Foreground="#FF5DAAFF" Text="↓ 0 KB/s"/>
    </StackPanel>
  </Border>
</Window>
